;; widgets

(defwidget workspaces [monitor]
  (eventbox :onscroll "hyprctl dispatch workspace `echo {} | sed 's/up/+/\' | sed 's/down/-/'`1"
    (box :class "workspaces"
      (for i in monitor
        (button
          :onclick "hyprctl dispatch workspace ${i.id}"
          :class "${i.class}"
          "${replace(i.name, ':', '')}")))))

(defwidget power []
  (eventbox
    :onhover "${EWW_CMD} update power_reveal=true"
    :onhoverlost "${EWW_CMD} update power_reveal=false"
    (box
      :vexpand "false"
      :hexpand "false"
      :space-evenly "false"
      :class "module-power"
      (revealer
        :transition "slideright"
        :reveal power_reveal
        :duration "350ms"
        (box
          :vexpand "false"
          :hexpand "false"
          :orientation "h"
          :space-evenly "false"
          (button
            :class "iconpower"
            :onclick "swaylock --clock --indicator --screenshots --effect-scale 0.4 --effect-vignette 0.2:0.5 --effect-blur 4x2"
            :tooltip "lock"
            "")
          (button
            :class "iconpower"
            :onclick "systemctl suspend-then-hibernate"
            :tooltip "suspend and hibernate"
            "")
          (button
            :class "iconpower"
            :onclick "hyprctl dispatch exit"
            :tooltip "logout"
            "")
          (button
            :class "iconpower"
            :onclick "systemctl reboot"
            :tooltip "reboot"
            "")
          (button
            :class "iconpower"
            :onclick "systemctl poweroff"
            :tooltip "poweroff"
            "")))
      (label
        :class "iconpower"
        :tooltip "power menu"
        :text ""))))

