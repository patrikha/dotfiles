### Theme
#
# Set GTK theme
#
	# GTK
	set $gnome-schema org.gnome.desktop.interface
	exec_always {
		gsettings set $gnome-schema gtk-theme 'Yaru-dark'
		gsettings set $gnome-schema icon-theme 'Yaru-dark'
		gsettings set $gnome-schema cursor-theme 'Breeze'
	}

	# Borders and gaps
	default_border pixel 1
        smart_borders no_gaps
	smart_gaps on
	gaps inner 4

# Title bar
font pango:"JetBrainsMono Nerd Font" Bold 8

# Background
set $background /usr/share/backgrounds/sway/wallpaper.jpg